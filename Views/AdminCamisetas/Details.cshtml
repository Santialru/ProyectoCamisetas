@model ProyectoCamisetas.Models.Camiseta
@{
    ViewData["Title"] = "Detalle Camiseta";
}

<h1>Detalle</h1>

<dl class="row">
    <dt class="col-sm-3">Equipo</dt><dd class="col-sm-9">@Model.Equipo</dd>
    <dt class="col-sm-3">Temporada</dt><dd class="col-sm-9">@Model.Temporada</dd>
    <dt class="col-sm-3">Tipo</dt><dd class="col-sm-9">@Model.Tipo</dd>
    <dt class="col-sm-3">Nombre</dt><dd class="col-sm-9">@Model.Nombre</dd>
    <dt class="col-sm-3">SKU</dt><dd class="col-sm-9">@Model.SKU</dd>
    <dt class="col-sm-3">Precio</dt><dd class="col-sm-9">@Model.Precio.ToString("C")</dd>
</dl>

<a class="btn btn-secondary" asp-action="Index">Volver</a>
<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>

