<div id="admin-grid" class="d-flex align-items-center justify-content-between mt-3 mb-2">
    <form method="get" class="d-flex align-items-center gap-2 flex-grow-1" style="max-width: 620px;">
        <label for="q" class="form-label m-0 me-2 small text-muted">Buscar camisetas</label>
        <input type="search" id="q" name="q" value="@Context.Request.Query["q"]" class="form-control form-control-sm" placeholder="Equipo, temporada, nombre o ID" aria-label="Buscar camisetas" />
        <button type="submit" class="btn btn-primary btn-sm">Buscar</button>
        <a class="btn btn-outline-secondary btn-sm" asp-action="FeatureHome">Limpiar</a>
        <input type="hidden" name="pageSize" value="@pageSize" />
    </form>
    <span class="small text-muted ms-2 d-none d-md-inline">@((int)ViewBag.TotalItems) resultados</span>
    </div>

<div class="table-responsive">
<table id="adminCamisetasTable" class="table table-dark table-hover table-sm align-middle">
    <thead>
        <tr>
            <th>ID</th>
            <th style="width:42px" class="text-center">Foto</th>
            <th>Equipo</th>
            <th class="d-none d-md-table-cell">Temporada</th>
            <th>Nombre</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var c in Model)
    {
        <tr>
            <td>@c.Id</td>
            <td class="text-center align-middle">
                @{
                    var firstImg = (c.Imagenes?.OrderBy(x => x.Orden).Select(x => x.Url).FirstOrDefault()) ?? c.ImagenUrl;
                }
                @{
                    var thumbSrc = !string.IsNullOrWhiteSpace(firstImg)
                        ? Url.Content(firstImg)
                        : Url.Content("~/img/logo.jpg");
                }
                <img src="@thumbSrc" alt="thumb" class="admin-thumb" />
            </td>
            <td>@c.Equipo</td>
            <td class="d-none d-md-table-cell">@c.Temporada</td>
            <td>
                @c.Nombre
                @if (c.DestacadaInicio)
                {
                    <span class="badge bg-info ms-2">Actual</span>
                }
                @{ var gridMap2 = ViewBag.CurrentGridMap as IDictionary<int, short>; if (gridMap2 != null && gridMap2.TryGetValue(c.Id, out var ord)) { <span class="badge bg-success ms-1">Tarjeta @ord</span>; } }
            </td>
            <td class="text-end">
                <div class="d-flex justify-content-end gap-2">
                    <form method="post" asp-action="FeatureHome">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="camisetaId" value="@c.Id" />
                        <button type="submit" class="btn btn-sm btn-primary">Carrusel</button>
                    </form>
                    <div class="input-group input-group-sm" style="width: 180px;">
                        <div class="input-group-text">
                            @{ var gridMap = ViewBag.CurrentGridMap as IDictionary<int, short>; var isChecked = gridMap != null && gridMap.ContainsKey(c.Id); }
                            <input class="form-check-input mt-0" type="checkbox" name="SelectedIds" form="gridForm" value="@c.Id" aria-label="Seleccionar tarjeta" @(isChecked?"checked":null) />
                        </div>
                        @{ short current = 0; if (gridMap != null && gridMap.TryGetValue(c.Id, out var o)) { current = o; } }
                        <select class="form-select" form="gridForm" name="@($"Order_{c.Id}")" aria-label="Orden">
                            <option value="">Orden</option>
                            @foreach (var v in new short[] { 1, 2, 3 })
                            {
                                var sel = current == v ? "selected" : null;
                                <option value="@v" selected="@sel">@v</option>
                            }
                        </select>
                    </div>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>
</div>

