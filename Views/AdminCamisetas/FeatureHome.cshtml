<form id="gridForm" method="post" asp-action="UpdateHomeGrid" class="mt-3">
    @Html.AntiForgeryToken()
    <div class="d-flex align-items-center gap-2">
        <button type="submit" class="btn btn-success btn-sm">Guardar tarjetas de inicio</button>
        <span class="small text-muted">Marca hasta 3 y asigna orden 1-3</span>
    </div>
</form>
<nav aria-label="Paginación" class="mt-3">
  <ul class="pagination pagination-sm">
    <li class="page-item @(page <= 1 ? "disabled" : null)">
      <a class="page-link" asp-action="FeatureHome" asp-route-q="@Context.Request.Query["q"]" asp-route-page="@(page-1)" asp-route-pageSize="@pageSize" asp-fragment="admin-grid" aria-label="Anterior">&lsaquo;</a>
    </li>
    @{
        var pages = new List<int>();
        var currPage = page;
        var lastPage = totalPages;
        if (currPage > 1) pages.Add(currPage - 1);
        pages.Add(currPage);
        if (currPage + 1 <= lastPage) pages.Add(currPage + 1);
        if (currPage + 2 <= lastPage) pages.Add(currPage + 2);
        pages = pages.Distinct().ToList();
        pages.Sort();
        var showFirst = !pages.Contains(1) && lastPage > 0;
        var leftEllipsis = showFirst && pages.Any() && (pages.First() - 1) > 1;
        var showLast = !pages.Contains(lastPage) && lastPage > 0;
        var rightEllipsis = showLast && pages.Any() && (lastPage - pages.Last()) > 1;
    }
    @if (showFirst)
    {
        <li class="page-item @(1 == page ? "active" : null)">
          <a class="page-link" asp-action="FeatureHome" asp-route-q="@Context.Request.Query["q"]" asp-route-page="1" asp-route-pageSize="@pageSize" asp-fragment="admin-grid">1</a>
        </li>
    }
    @if (leftEllipsis)
    {
        <li class="page-item disabled"><span class="page-link">&hellip;</span></li>
    }
    @foreach (var p in pages)
    {
        <li class="page-item @(p == page ? "active" : null)">
          <a class="page-link" asp-action="FeatureHome" asp-route-q="@Context.Request.Query["q"]" asp-route-page="@p" asp-route-pageSize="@pageSize" asp-fragment="admin-grid">@p</a>
        </li>
    }
    @if (rightEllipsis)
    {
        <li class="page-item disabled"><span class="page-link">&hellip;</span></li>
    }
    @if (showLast)
    {
        <li class="page-item @(lastPage == page ? "active" : null)">
          <a class="page-link" asp-action="FeatureHome" asp-route-q="@Context.Request.Query["q"]" asp-route-page="@lastPage" asp-route-pageSize="@pageSize" asp-fragment="admin-grid">@lastPage</a>
        </li>
    }
    <li class="page-item @(page >= totalPages ? "disabled" : null)">
      <a class="page-link" asp-action="FeatureHome" asp-route-q="@Context.Request.Query["q"]" asp-route-page="@(page+1)" asp-route-pageSize="@pageSize" asp-fragment="admin-grid" aria-label="Siguiente">&rsaquo;</a>
    </li>
  </ul>
  <div class="small text-muted">Página @(page) de @(totalPages)</div>
</nav>

