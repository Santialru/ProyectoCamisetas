@model IEnumerable<ProyectoCamisetas.Models.Camiseta>
@{
    ViewData["Title"] = "Modificar inicio";
    var featuredId = (int?)ViewBag.CurrentFeaturedId;
    int page = ViewBag.Page ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
}

<h1>Seleccionar contenido de inicio</h1>

<p class="text-muted">Elige la camiseta cuyas imágenes se mostrarán en la portada. En móviles, esas imágenes aparecen debajo del texto.</p>

<div class="table-responsive">
<table class="table table-dark table-hover table-sm align-middle">
    <thead>
        <tr>
            <th>ID</th>
            <th>Equipo</th>
            <th class="d-none d-md-table-cell">Temporada</th>
            <th>Nombre</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var c in Model)
    {
        <tr>
            <td>@c.Id</td>
            <td>@c.Equipo</td>
            <td class="d-none d-md-table-cell">@c.Temporada</td>
            <td>
                @c.Nombre
                @if (c.DestacadaInicio)
                {
                    <span class="badge bg-info ms-2">Actual</span>
                }
                @{ var gridMap2 = ViewBag.CurrentGridMap as IDictionary<int, short>; if (gridMap2 != null && gridMap2.TryGetValue(c.Id, out var ord)) { <span class="badge bg-success ms-1">Tarjeta @ord</span>; } }
            </td>
            <td class="text-end">
                <div class="d-flex justify-content-end gap-2">
                    <form method="post" asp-action="FeatureHome">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="camisetaId" value="@c.Id" />
                        <button type="submit" class="btn btn-sm btn-primary">Carrusel</button>
                    </form>
                    <div class="input-group input-group-sm" style="width: 180px;">
                        <div class="input-group-text">
                            @{ var gridMap = ViewBag.CurrentGridMap as IDictionary<int, short>; var isChecked = gridMap != null && gridMap.ContainsKey(c.Id); }
                            <input class="form-check-input mt-0" type="checkbox" name="SelectedIds" form="gridForm" value="@c.Id" aria-label="Seleccionar tarjeta" @(isChecked?"checked":null) />
                        </div>
                        @{ short current = 0; if (gridMap != null && gridMap.TryGetValue(c.Id, out var o)) { current = o; } }
                        <select class="form-select" form="gridForm" name="@($"Order_{c.Id}")" aria-label="Orden">
                            <option value="">Orden</option>
                            @foreach (var v in new short[] { 1, 2, 3 })
                            {
                                var sel = current == v ? "selected" : null;
                                <option value="@v" selected="@sel">@v</option>
                            }
                        </select>
                    </div>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>
</div>

<form id="gridForm" method="post" asp-action="UpdateHomeGrid" class="mt-3">
    @Html.AntiForgeryToken()
    <div class="d-flex align-items-center gap-2">
        <button type="submit" class="btn btn-success btn-sm">Guardar tarjetas de inicio</button>
        <span class="small text-muted">Marca hasta 3 y asigna orden 1-3</span>
    </div>
</form>
<nav aria-label="Paginación" class="mt-3">
  <ul class="pagination pagination-sm">
    <li class="page-item @(page <= 1 ? "disabled" : null)">
      <a class="page-link" asp-action="FeatureHome" asp-route-page="@(page-1)" asp-route-pageSize="@pageSize">Anterior</a>
    </li>
    @for (int p = 1; p <= totalPages; p++)
    {
        <li class="page-item @(p == page ? "active" : null)">
            <a class="page-link" asp-action="FeatureHome" asp-route-page="@p" asp-route-pageSize="@pageSize">@p</a>
        </li>
    }
    <li class="page-item @(page >= totalPages ? "disabled" : null)">
      <a class="page-link" asp-action="FeatureHome" asp-route-page="@(page+1)" asp-route-pageSize="@pageSize">Siguiente</a>
    </li>
  </ul>
  <div class="small text-muted">Página @(page) de @(totalPages)</div>
</nav>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
 </div>



