@model IEnumerable<ProyectoCamisetas.Models.Camiseta>
@{
    ViewData["Title"] = "Administrar Camisetas";
}

<h1>Administración de Camisetas</h1>

<div class="d-grid gap-2 d-md-flex align-items-center mb-3">
    <a class="btn btn-primary" asp-action="Create">Nueva Camiseta</a>
    <a class="btn btn-outline-secondary" asp-controller="Camisetas" asp-action="Index">Ver Catálogo</a>
    <button type="button" id="toggleBulkPrices" class="btn btn-outline-warning">Modificar precios</button>
    <a class="btn btn-outline-info" asp-action="FeatureHome">Modificar inicio</a>
  </div>

<style>
  /* Oculta botones flotantes globales en admin */
  .ig-fab, .wa-fab { display: none !important; }
</style>

<form method="get" class="row g-2 align-items-end mb-3" hidden>
    <div class="col-sm-4">
        <label class="form-label">Equipo</label>
        <select name="equipo" class="form-select">
            <option value="">Todos</option>
            @foreach (var eq in (IEnumerable<string>)ViewBag.Equipos ?? Enumerable.Empty<string>())
            {
                var sel = (string)ViewBag.SelectedEquipo == eq ? "selected" : null;
                <option value="@eq" selected="@sel">@eq</option>
            }
        </select>
    </div>
    <div class="col-sm-4">
        <label class="form-label">Temporada</label>
        <select name="temporada" class="form-select">
            <option value="">Todas</option>
            @foreach (var tp in (IEnumerable<string>)ViewBag.Temporadas ?? Enumerable.Empty<string>())
            {
                var sel = (string)ViewBag.SelectedTemporada == tp ? "selected" : null;
                <option value="@tp" selected="@sel">@tp</option>
            }
        </select>
    </div>
    <div class="col-sm-4">
        <label class="form-label">Ordenar por</label>
        <select name="orden" class="form-select">
            @{ var current = (string?)ViewBag.Orden ?? string.Empty; }
            <option value="">Recientes</option>
            <option value="equipo_asc" selected="@(current=="equipo_asc" ? "selected" : null)">Equipo (A→Z)</option>
            <option value="equipo_desc" selected="@(current=="equipo_desc" ? "selected" : null)">Equipo (Z→A)</option>
            <option value="temporada_asc" selected="@(current=="temporada_asc" ? "selected" : null)">Temporada (asc)</option>
            <option value="temporada_desc" selected="@(current=="temporada_desc" ? "selected" : null)">Temporada (desc)</option>
            <option value="precio_asc" selected="@(current=="precio_asc" ? "selected" : null)">Precio (menor→mayor)</option>
            <option value="precio_desc" selected="@(current=="precio_desc" ? "selected" : null)">Precio (mayor→menor)</option>
        </select>
    </div>
    <div class="col-12 d-flex gap-2 mt-1">
        <button type="submit" class="btn btn-primary">Aplicar</button>
        <a class="btn btn-secondary" asp-action="Index">Limpiar</a>
    </div>
</form>

@{
    var verSel = (string)Context.Request.Query["version"]; 
    var estSel = (string)Context.Request.Query["enStock"]; 
    var tallaSel = (string)Context.Request.Query["talla"]; 
    var sortSel = (string)Context.Request.Query["sort"]; 
    var prodSel = (string)Context.Request.Query["producto"]; 
}
<form method="get" class="row g-2 mb-3 align-items-stretch">
    <div class="col-12 col-lg">
        <input type="text" name="q" value="@Context.Request.Query["q"]" class="form-control" placeholder="Buscar por equipo, liga, nombre, temporada, marca, jugador..." />
    </div>
    <div class="col-auto d-grid">
        <button class="btn btn-primary" type="submit">Buscar</button>
    </div>
    <div class="col-auto">
        <div class="dropdown" data-bs-auto-close="outside">
            <button class="btn btn-outline-primary dropdown-toggle" type="button" id="filtersDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                Filtros
            </button>
            <div class="dropdown-menu dropdown-menu-end p-3" aria-labelledby="filtersDropdown" style="min-width: 320px;">
                <div class="row g-2">
                    <div class="col-12">
                        <label class="form-label small mb-1">Versión</label>
                        <select class="form-select" name="version">
                            <option value="">Todas</option>
                            @if (verSel == "aficionado") { <option value="aficionado" selected>Aficionado</option> } else { <option value="aficionado">Aficionado</option> }
                            @if (verSel == "jugador") { <option value="jugador" selected>Jugador</option> } else { <option value="jugador">Jugador</option> }
                            @if (verSel == "retro") { <option value="retro" selected>Retro</option> } else { <option value="retro">Retro</option> }
                        </select>
                    </div>
                    <div class="col-12">
                        <label class="form-label small mb-1">Producto</label>
                        <select class="form-select" name="producto">
                            <option value="">Todos</option>
                            @if (prodSel == "camiseta") { <option value="camiseta" selected>Camiseta</option> } else { <option value="camiseta">Camiseta</option> }
                            @if (prodSel == "campera") { <option value="campera" selected>Campera</option> } else { <option value="campera">Campera</option> }
                            @if (prodSel == "short") { <option value="short" selected>Short</option> } else { <option value="short">Short</option> }
                            @if (prodSel == "conjunto") { <option value="conjunto" selected>Conjunto</option> } else { <option value="conjunto">Conjunto</option> }
                        </select>
                    </div>
                    <div class="col-12">
                        <label class="form-label small mb-1">Disponibilidad</label>
                        <select class="form-select" name="enStock">
                            <option value="">Todas</option>
                            @if (estSel == "true") { <option value="true" selected>En stock</option> } else { <option value="true">En stock</option> }
                            @if (estSel == "false") { <option value="false" selected>Por encargo</option> } else { <option value="false">Por encargo</option> }
                        </select>
                    </div>
                    <div class="col-12">
                        <label class="form-label small mb-1">Talle</label>
                        <select class="form-select" name="talla">
                            <option value="">Todos</option>
                            <option value="Ninos" selected="@(tallaSel=="Ninos" ? "selected" : null)">Niños</option>
                            <option value="XS" selected="@(tallaSel=="XS" ? "selected" : null)">XS</option>
                            <option value="S" selected="@(tallaSel=="S" ? "selected" : null)">S</option>
                            <option value="M" selected="@(tallaSel=="M" ? "selected" : null)">M</option>
                            <option value="L" selected="@(tallaSel=="L" ? "selected" : null)">L</option>
                            <option value="XL" selected="@(tallaSel=="XL" ? "selected" : null)">XL</option>
                            <option value="XXL" selected="@(tallaSel=="XXL" ? "selected" : null)">XXL</option>
                        </select>
                    </div>
                    <div class="col-12">
                        <label class="form-label small mb-1">Ordenar</label>
                        <select class="form-select" name="sort">
                            <option value="">Relevancia</option>
                            @if (sortSel == "price_asc") { <option value="price_asc" selected>Precio: menor a mayor</option> } else { <option value="price_asc">Precio: menor a mayor</option> }
                            @if (sortSel == "price_desc") { <option value="price_desc" selected>Precio: mayor a menor</option> } else { <option value="price_desc">Precio: mayor a menor</option> }
                        </select>
                    </div>
                </div>
                <div class="d-flex justify-content-end gap-2 mt-3">
                    <button type="submit" class="btn btn-primary btn-sm">Aplicar filtros</button>
                    <a class="btn btn-secondary btn-sm" asp-action="Index">Limpiar</a>
                </div>
            </div>
        </div>
    </div>
</form>

<form asp-action="BulkPriceAdjust" method="post" id="bulkForm" class="border rounded p-2 mb-3 d-none">
    <div class="row g-2 align-items-end">
        <div class="col-sm-3">
            <label for="porcentaje" class="form-label">Porcentaje</label>
            <div class="input-group">
                <input type="number" step="0.1" min="0.1" class="form-control" id="porcentaje" name="porcentaje" placeholder="10" required>
                <span class="input-group-text">%</span>
            </div>
        </div>
        <div class="col-sm-4 d-flex gap-2">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="modo" id="modoUp" value="up" checked>
                <label class="form-check-label" for="modoUp">Aumentar</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="modo" id="modoDown" value="down">
                <label class="form-check-label" for="modoDown">Disminuir</label>
            </div>
        </div>
        <div class="col-sm-5 text-end">
            <button type="submit" class="btn btn-warning">Aplicar a seleccionadas</button>
        </div>
    </div>
    @Html.AntiForgeryToken()
</form>

<div class="table-responsive">
<table class="table table-dark table-hover table-sm align-middle">
    <thead>
        <tr>
            <th style="width:36px" class="text-center d-none" id="th-select">
                <input type="checkbox" id="selectAll" />
            </th>
            <th>Equipo</th>
            <th class="d-none d-md-table-cell">Temporada</th>
            <th class="d-none d-lg-table-cell">Tipo</th>
            <th>Nombre</th>
            <th class="d-none d-lg-table-cell">SKU</th>
            <th>Precio</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-center align-middle d-none sel-cell">
                <input type="checkbox" name="ids" value="@item.Id" form="bulkForm" />
            </td>
            <td>@item.Equipo</td>
            <td class="d-none d-md-table-cell">@item.Temporada</td>
            <td class="d-none d-lg-table-cell">@item.Tipo</td>
            <td>@item.Nombre</td>
            <td class="d-none d-lg-table-cell">@item.SKU</td>
            <td>@item.Precio.ToString("C")</td>
            <td>
                <!-- Acciones en pantallas medianas y grandes -->
                <div class="d-none d-md-flex flex-wrap gap-1">
                    <a class="btn btn-sm btn-outline-info" asp-controller="Camisetas" asp-action="Details" asp-route-id="@item.Id">Ver</a>
                    <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    @{ var tallesDisp = (item.TallesStock ?? Enumerable.Empty<ProyectoCamisetas.Models.CamisetaTalleStock>()).Where(t => t.Cantidad > 0).OrderBy(t => t.Talla).ToList(); }
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-success dropdown-toggle @(tallesDisp.Any() ? "" : "disabled opacity-50")" data-bs-toggle="dropdown" aria-expanded="false">Venta</button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            @if (!tallesDisp.Any())
                            {
                                <li><span class="dropdown-item-text text-muted">Sin talles</span></li>
                            }
                            else
                            {
                                foreach (var ts in tallesDisp)
                                {
                                    var __tlabel = ((int)ts.Talla) == 7 ? "XXXL" : (((int)ts.Talla) == 8 ? "XXXXL" : ts.Talla.ToString());
                                    <li>
                                        <form asp-action="Venta" asp-route-id="@item.Id" method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="talla" value="@ts.Talla" />
                                            <button type="submit" class="dropdown-item">@__tlabel (@ts.Cantidad)</button>
                                        </form>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
                <!-- Menú desplegable en móviles -->
                <div class="dropdown d-md-none">
                    <button class="btn btn-sm btn-outline-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Acciones
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-controller="Camisetas" asp-action="Details" asp-route-id="@item.Id">Ver</a></li>
                        <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">Editar</a></li>
                        <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a></li>
                        @{
                            var tallesDispM = (item.TallesStock ?? Enumerable.Empty<ProyectoCamisetas.Models.CamisetaTalleStock>()).Where(t => t.Cantidad > 0).OrderBy(t => t.Talla).ToList();
                        }
                        @if (!tallesDispM.Any())
                        {
                            <li><span class="dropdown-item-text text-muted">Sin talles disponibles</span></li>
                        }
                        else
                        {
                            <li><h6 class="dropdown-header">Venta por talle</h6></li>
                            @foreach (var ts in tallesDispM)
                            {
                                var __tlabelM = ((int)ts.Talla) == 7 ? "XXXL" : (((int)ts.Talla) == 8 ? "XXXXL" : ts.Talla.ToString());
                                <li>
                                    <form asp-action="Venta" asp-route-id="@item.Id" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="talla" value="@ts.Talla" />
                                        <button type="submit" class="dropdown-item text-success">@__tlabelM (@ts.Cantidad)</button>
                                    </form>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </td>
        </tr>
    }
    </tbody>
 </table>
</div>

@{
    int page = ViewBag.Page ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    string q = (string)Context.Request.Query["q"];
    string version = (string)Context.Request.Query["version"];
    string enStock = (string)Context.Request.Query["enStock"];
    string talla = (string)Context.Request.Query["talla"];
    string sort = (string)Context.Request.Query["sort"];
    string producto = (string)Context.Request.Query["producto"];
    string ordenSel = ViewBag.Orden as string ?? string.Empty;
}

<nav aria-label="Paginación" class="mt-3">
  <ul class="pagination pagination-sm">
    <li class="page-item @(page <= 1 ? "disabled" : null)">
      <a class="page-link" asp-action="Index" asp-route-q="@q" asp-route-version="@version" asp-route-enStock="@enStock" asp-route-talla="@talla" asp-route-sort="@sort" asp-route-producto="@producto" asp-route-page="@(page-1)" asp-route-pageSize="@pageSize">Anterior</a>
    </li>
    @for (int p = 1; p <= totalPages; p++)
    {
        <li class="page-item @(p == page ? "active" : null)">
            <a class="page-link" asp-action="Index" asp-route-q="@q" asp-route-version="@version" asp-route-enStock="@enStock" asp-route-talla="@talla" asp-route-sort="@sort" asp-route-producto="@producto" asp-route-page="@p" asp-route-pageSize="@pageSize">@p</a>
        </li>
    }
    <li class="page-item @(page >= totalPages ? "disabled" : null)">
      <a class="page-link" asp-action="Index" asp-route-q="@q" asp-route-version="@version" asp-route-enStock="@enStock" asp-route-talla="@talla" asp-route-sort="@sort" asp-route-producto="@producto" asp-route-page="@(page+1)" asp-route-pageSize="@pageSize">Siguiente</a>
    </li>
  </ul>
  <div class="small text-muted">Página @(page) de @(totalPages)</div>
</nav>

<script>
(() => {
  const toggleBtn = document.getElementById('toggleBulkPrices');
  const bulkForm = document.getElementById('bulkForm');
  const thSelect = document.getElementById('th-select');
  const selectAll = document.getElementById('selectAll');
  const selCells = document.querySelectorAll('.sel-cell');

  const setSelVisible = (show) => {
    bulkForm.classList.toggle('d-none', !show);
    thSelect.classList.toggle('d-none', !show);
    selCells.forEach(td => td.classList.toggle('d-none', !show));
  };

  toggleBtn?.addEventListener('click', () => setSelVisible(bulkForm.classList.contains('d-none')));
  selectAll?.addEventListener('change', () => {
    document.querySelectorAll('input[name="ids"]').forEach(cb => { cb.checked = selectAll.checked; });
  });
})();
</script>
