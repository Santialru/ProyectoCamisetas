@model ProyectoCamisetas.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login Owner";
}

<h1>Login del Owner</h1>
<p class="text-muted">Acceso restringido. El catálogo es público.</p>

<form asp-action="Login" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="UsernameOrEmail" class="form-label"></label>
        <input asp-for="UsernameOrEmail" class="form-control" />
        <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" asp-for="RememberMe" />
        <label class="form-check-label" asp-for="RememberMe"></label>
    </div>

    <button type="submit" class="btn btn-primary">Entrar</button>
</form>

<partial name="_ValidationScriptsPartial" />

